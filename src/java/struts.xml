<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="registeruser" class="struts2.test.actions.UserAction" method="registerUser">
            <result name="REGISTER">/register.jsp</result>
        </action>
        <action name="report" class="struts2.test.actions.UserAction" method="showUsers">
            <result name="REPORT">/report.jsp</result>
        </action>
        <action name="updatedetails" class="struts2.test.actions.UserAction" method="updateUser">
            <result name="UPDATE">/update.jsp</result>
        </action>
        <action name="deleterecord" class="struts2.test.actions.UserAction" method="deleteUser">
            <result name="DELETE">/delete.jsp</result>
        </action>
        <action name="productregister" class="struts2.test.actions.ProductAction" method="registerProduct">
            <result name="PRODUCTREGISTER">/productregister.jsp</result>
        </action>
        <action name="reportproduct" class="struts2.test.actions.ProductAction" method="showProducts">
            <result name="REPORTPRODUCT">/productreport.jsp</result>
        </action>
        <action name="updateproduct" class="struts2.test.actions.ProductAction" method="updateProduct">
            <result name="UPDATEPRODUCT">/productupdate.jsp</result>
        </action>
        <action name="deleteproduct" class="struts2.test.actions.ProductAction" method="deleteProduct">
            <result name="DELETEPRODUCT">/productdelete.jsp</result>
        </action>
    </package>
</struts>
